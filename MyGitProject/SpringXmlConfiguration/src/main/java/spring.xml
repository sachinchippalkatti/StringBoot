<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">

<bean id="vehical" class="com.sachin.spring.SpringXmlConfiguration.Bike">
</bean>

<bean id="car" class="com.sachin.spring.SpringXmlConfiguration.Car">
</bean>

<bean id="bike" class="com.sachin.spring.SpringXmlConfiguration.Bike">
</bean>

<bean id="tyre" class="com.sachin.spring.SpringXmlConfiguration.Tyre">
